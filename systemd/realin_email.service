[Unit]
Description=Realin Email Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/realin/real_in_landing
Environment="PATH=/home/realin/real_in_landing/.venv/bin"
ExecStart=/home/realin/real_in_landing/.venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 server:app
StandardOutput=append:/var/log/realin_email.log
StandardError=append:/var/log/realin_email_error.log
Restart=always

[Install]
WantedBy=multi-user.target